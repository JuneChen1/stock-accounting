<div style="margin: 30px auto; padding: 0 8px; max-width: 1000px;">
  <table class="table table-striped" id="record-table">
    <thead>
      <tr>
        <th scope="col" style="width: 14%">代號</th>
        <th scope="col" style="width: 17%">名稱</th>
        <th scope="col" style="width: 17%">持有股數</th>
        <th scope="col" style="width: 17%">平均成本</th>
        <th scope="col" style="width: 17%">市價</th>
        <th scope="col" style="width: 16%">損益</th>
      </tr>
    </thead>
    <tbody>
      {{#each stocks}}
      <tr>
        <th scope="row" class="name">
          <a href="/stocks/{{ this.symbol }}" target="_blank" style="text-decoration: none; color: black;">
            {{ this.symbol }}
          </a>
        </th>
        <td class="name">{{ this.name }}</td>
        <td class="shares">{{ this.shares }}</td>
        <td class="cost">{{ this.cost }}</td>
        <td class="price">price</td>
        <td class="profit">profit</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <a href="/stocks/new">
    <button type="button" class="btn btn-dark" id="add-button">新增</button>
  </a>
</div>