<div id="index-region">
  {{> message}}
  <div class="content">
    <div class="card bg-light mb-4" style="border-radius: 10px;">
      <div class="card-body d-flex justify-content-between">
        <div>
          <h4>總市值</h4>
          <h5 class="ps-1">{{ total.marketCap }}</h5>
        </div>
        <div>
          <h4>總成本</h4>
          <h5 class="ps-1">{{ total.amount }}</h5>
        </div>
        <div>
          <h4>總損益</h4>
          <h5 class="ps-1">{{ total.profit }}</h5>
        </div>
        <div>
          <h4>總報酬率</h4>
          <h5 class="ps-1">{{ total.roi }}</h5>
        </div>
      </div>
    </div>
  
    <table class="table table-striped mb-3" id="record-table">
      <thead>
        <tr>
          <th scope="col" style="width: 11%;">
            <div style="min-width: 38.5px;">代號</div>
          </th>
          <th scope="col" style="width: 19%">名稱</th>
          <th scope="col" style="width: 14%">持有股數</th>
          <th scope="col" style="width: 14%">成本均價</th>
          <th scope="col" style="width: 14%">市價</th>
          <th scope="col" style="width: 14%">損益</th>
          <th scope="col" style="width: 14%">報酬率</th>
        </tr>
      </thead>
      <tbody>
        {{#each stocks}}
        <tr>
          <th scope="row" class="symbol">
            <a href="/stocks/{{ this.symbol }}" style="text-decoration: none; color: black;">
              {{ this.symbol }}
            </a>
          </th>
          <td class="name">
            <div class="stock-name">{{ this.name }}</div>
          </td>
          <td class="shares">{{ this.shares }}</td>
          <td class="cost">{{ this.cost }}</td>
          <td class="price">{{ this.price }}</td>
          <td class="profit">{{ this.profit }}</td>
          <td class="roi">{{ this.roi }}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    <a href="/stocks/new">
      <button type="button" class="btn btn-dark" id="add-button">新增</button>
    </a>
  </div>
  
  <nav class="mt-3">
    <ul class="pagination justify-content-center">
      <li class="page-item">
        <a class="page-link" href="/?page={{pagination.prev}}" style="color: #595959;">&laquo;</a>
      </li>
      {{#each pagination.pages}}
        {{#ifCond this ../pagination.currentPage}}
          <li class="page-item disabled">
            <a class="page-link" href="#" style="color: #595959;">{{this}}</a>
          </li>
        {{else}}
          <li class="page-item">
            <a class="page-link" href="/?page={{this}}" style="color: #595959;">{{this}}</a>
          </li>
        {{/ifCond}}
      {{/each}}
      <li class="page-item">
        <a class="page-link" href="/?page={{pagination.next}}" style="color: #595959;">&raquo;</a>
      </li>
    </ul>
  </nav>
</div>