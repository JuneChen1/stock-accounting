<form action="/signup" method="POST">
  <div class="d-flex flex-column align-items-center mt-5">
    {{> message}}
    <h3>建立帳號</h3>
    <div class="mt-2" style="width: 20%;">
      <label for="email" class="form-label">Email</label>
      <div class="input-group mb-3">
        <input type="email" class="form-control" id="email" aria-describedby="basic-addon3">
      </div>
      <label for="name" class="form-label">名稱</label>
      <div class="input-group mb-3">
        <input type="name" class="form-control" id="name" aria-describedby="basic-addon3">
      </div>
      <label for="password" class="form-label">密碼</label>
      <div class="input-group mb-3">
        <input type="password" class="form-control" id="password" aria-describedby="basic-addon3">
      </div>
      <label for="confirm-password" class="form-label">確認密碼</label>
      <div class="input-group mb-3">
        <input type="confirm-password" class="form-control" id="confirm-password" aria-describedby="basic-addon3">
      </div>
    </div>
    <button type="submit" class="btn btn-dark mt-4" style="width: 20%; border-radius: 50px;">
      註冊
    </button>
    <a href="/login" class="mt-4">返回登入</a>
  </div>
</form>